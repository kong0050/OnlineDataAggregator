<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/myLayout"
    android:background="@drawable/stars"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/menuBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:titleTextColor="@color/white"
        android:background="@color/black"/>

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_below="@+id/menuBar"
        android:text="@string/header"
        android:textColor="@color/yellow"
        android:textStyle="bold"
        />
    <LinearLayout
        android:id="@+id/dateContainer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@+id/text_home"
        android:padding="5dp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        >
        <EditText
            android:id="@+id/dateBox"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
           android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/datePicker"
            android:background="@color/white"
            android:textAlignment="center"/>
        <Button
            android:id="@+id/searchBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/searchBtn"
            android:background="@drawable/text_border"
            android:textColor="@color/yellow"
            android:layout_marginLeft="5dp"

             />
        </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        />

    <ImageView
        android:id="@+id/nasaLogo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/nasa_logo"
        android:layout_centerVertical="true"
        />

    <RelativeLayout
        android:id="@+id/resultsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dateContainer"
        android:layout_marginTop="10dp"
        android:visibility="invisible">

        <TextView
            android:id="@+id/imageTitle"
            android:layout_width="315dp"
            android:layout_height="30dp"
            android:text="Title"
            android:textSize="22dp"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/yellow"
            android:background="@color/black"

            />


        <TextView
            android:id="@+id/hd_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hdUrlLink"
            android:layout_below="@+id/imageTitle"
            android:layout_centerHorizontal="true"
            android:textColor="@color/link"
            android:layout_marginTop="7dp"
            android:background="@color/black"


            />
        <ImageView
            android:id="@+id/preview"
            android:layout_width="250dp"
            android:layout_height="240dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/hd_url"
            />


    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        android:gravity="center"
        >
        <Button
            android:id="@+id/saveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/saveBtn"
            android:background="@drawable/text_border"
            android:textColor="@color/yellow"
            />
        <Button
            android:id="@+id/clearBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clearBtn"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/text_border"
            android:textColor="@color/yellow"/>
        <Button
            android:id="@+id/goToFavBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/favBtn"
            android:background="@drawable/text_border"
            android:textColor="@color/yellow"
            android:padding="6dp"
            />

    </LinearLayout>






</RelativeLayout>