<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@drawable/text_border"
    >
    <ImageView
        android:id="@+id/itemWindow"
        android:layout_width="85dp"
        android:layout_height="100dp"
        android:layout_margin="4dp"/>
    <LinearLayout
        android:id="@+id/titleContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/itemWindow"
        android:gravity="center">
        <TextView
            android:id="@+id/itemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:layout_alignParentTop="true"
            android:layout_margin="3dp"
            android:textSize="17dp"
            android:textColor="@color/white"


            />
    </LinearLayout>

    <TextView
        android:id="@+id/itemDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleContainer"
        android:layout_toRightOf="@id/itemWindow"
        android:text="Date: 03/05/2020"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:textSize="17dp"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/itemUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemDate"
        android:layout_toRightOf="@id/itemWindow"
        android:text="Url: https://www.algonquincollege.com/newstudents/brightspace"
        android:layout_marginLeft="3dp"
        android:textColor="@color/link"
        android:layout_marginBottom="4dp"
        />

</RelativeLayout>