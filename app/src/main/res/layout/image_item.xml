<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">
    <ImageView
        android:id="@+id/itemWindow"
        android:layout_width="85dp"
        android:layout_height="100dp"/>
    <TextView
        android:id="@+id/itemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:layout_toRightOf="@id/itemWindow"
        android:layout_alignParentTop="true"
        android:layout_margin="3dp"
        />
    <TextView
        android:id="@+id/itemDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemTitle"
        android:layout_toRightOf="@id/itemWindow"
        android:text="Date: 03/05/2020"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="3dp"
        />
    <TextView
        android:id="@+id/itemUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemDate"
        android:layout_toRightOf="@id/itemWindow"
        android:text="Url: https://www.algonquincollege.com/newstudents/brightspace"
        android:layout_marginLeft="3dp"
        />

</RelativeLayout>